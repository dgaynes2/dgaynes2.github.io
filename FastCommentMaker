root = tk.Tk()
VERSION = 'Beta 3.0'
NAME = f'课评终结者 {VERSION}'
root.title(NAME)
win_W = 1165
win_H = 487
root.geometry(f'+{root.winfo_screenwidth()//2-win_W//2}+{root.winfo_screenheight()//2-win_H//2-50}')
AppWindow(root)
root.mainloop()
