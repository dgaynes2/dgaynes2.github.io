    # SS
        def add_vocab_ss(x, v):
            self.book.current(11)
            self.newWords.replace(0.0, tk.END, (SS[x][1][v][1]))
            self.sentences.replace(0.0, tk.END, (SS[x][1][v][2]))
        for i in range(10):
            super_starters_unit = tk.Menu(super_starter_menu, tearoff=0)
            super_starter_menu.add_cascade(label=SS[i][0], menu=super_starters_unit, compound=tk.LEFT)
            for j in range(4):
                super_starters_unit.add_command(label=SS[i][1][j][0], command=lambda x=i, v=j: add_vocab_ss(x, v))
    # MM
        def add_vocab_mm(x, v):
            self.book.current(12)
            self.newWords.replace(0.0, tk.END, (MM[x][1][v][1]))
            self.sentences.replace(0.0, tk.END, (MM[x][1][v][2]))
            if x == 7 and v == 0:
                self.grammar.replace(0.0, tk.END, MM[x][1][v][3])
        for i in range(10):
            mighty_mover_unit = tk.Menu(mighty_mover_menu, tearoff=0)
            mighty_mover_menu.add_cascade(label=MM[i][0], menu=mighty_mover_unit, compound=tk.LEFT)
            for j in range(4):
                mighty_mover_unit.add_command(label=MM[i][1][j][0], command=lambda x=i, v=j: add_vocab_mm(x, v))
