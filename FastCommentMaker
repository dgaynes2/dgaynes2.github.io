    # menu items
        hello_teddy_menu = tk.Menu(self.menubar, tearoff=0)
        self.menubar.add_cascade(label='Hello Teddy', menu=hello_teddy_menu, compound=tk.LEFT)
        super_starter_menu = tk.Menu(self.menubar, tearoff=0)
        self.menubar.add_cascade(label='Super Starter', menu=super_starter_menu, compound=tk.LEFT)
        mighty_mover_menu = tk.Menu(self.menubar, tearoff=0)
        self.menubar.add_cascade(label='Mighty Mover', menu=mighty_mover_menu, compound=tk.LEFT)
        guess_what_menu = tk.Menu(self.menubar, tearoff=0)
        self.menubar.add_cascade(label='Guess What', menu=guess_what_menu, compound=tk.LEFT)
        think_menu = tk.Menu(self.menubar, tearoff=0)
        self.menubar.add_cascade(label='Think', menu=think_menu, compound=tk.LEFT)
        other_menu = tk.Menu(self.menubar, tearoff=0)
        self.menubar.add_cascade(label='Other', menu=other_menu, compound=tk.LEFT)
##-THINK MENUS-#########################################################################################################
        mt1menu = tk.Menu(think_menu, tearoff=0)
        think_menu.add_cascade(label='MT1', menu=mt1menu, compound=tk.LEFT)
        mt2menu = tk.Menu(think_menu, tearoff=0)
        think_menu.add_cascade(label='MT2', menu=mt2menu, compound=tk.LEFT)
        mt3menu = tk.Menu(think_menu, tearoff=0)
        think_menu.add_cascade(label='MT3', menu=mt3menu, compound=tk.LEFT)
        mt4menu = tk.Menu(think_menu, tearoff=0)
        think_menu.add_cascade(label='MT4', menu=mt4menu, compound=tk.LEFT)
        mt5menu = tk.Menu(think_menu, tearoff=0)
        think_menu.add_cascade(label='MT5', menu=mt5menu, compound=tk.LEFT)
        mt6menu = tk.Menu(think_menu, tearoff=0)
        think_menu.add_cascade(label='MT6', menu=mt6menu, compound=tk.LEFT)
##-COLUMN WIDGETS-######################################################################################################
        self.leftColumn = tk.Label(self.root)
        self.leftColumn.pack(side=tk.LEFT,fill=tk.X,expand=True,anchor=tk.N)

        self.centerColumnLeft = tk.Label(self.root)
        self.centerColumnLeft.pack(side=tk.LEFT,fill=tk.BOTH,expand=True)

        self.centerColumnRight = tk.Label(self.root)
        self.centerColumnRight.pack(side=tk.LEFT,fill=tk.BOTH,expand=True)

        self.rightColumn = tk.Label(self.root)
        self.rightColumn.pack(side=tk.LEFT,fill=tk.BOTH,expand=True)
    # left column
        self.studentNameLabel = tk.LabelFrame(self.leftColumn,text='Student Name',font=font_labels)
        self.studentNameLabel.pack(fill=tk.BOTH,expand=True)
        self.studentEntry = tk.Entry(self.studentNameLabel,width=30)
        self.studentEntry.pack(fill=tk.BOTH,expand=True)

        self.bookNameLabel = tk.LabelFrame(self.leftColumn,text='Book Name',font=font_labels)
        self.bookNameLabel.pack(fill=tk.BOTH,expand=True)
        self.book = ttk.Combobox(self.bookNameLabel, values=BOOK, state='readonly', width=17)
        self.book.pack(fill=tk.BOTH,expand=True)

        self.bookPageLabel = tk.LabelFrame(self.leftColumn,text='Pages',font=font_labels)
        self.bookPageLabel.pack(fill=tk.BOTH,expand=True)
        self.bookPage = tk.Entry(self.bookPageLabel,width=30)
        self.bookPage.pack(fill=tk.BOTH,expand=True)

        self.behaviorLabel = tk.LabelFrame(self.leftColumn,text='Behavior',font=font_labels)
        self.behaviorLabel.pack(fill=tk.BOTH,expand=True,pady=(10,10))
        # speaking
        speakVar = tk.StringVar()
        self.speakingLabel = tk.LabelFrame(self.behaviorLabel,text='Speaking',bd=0)
        self.speakingLabel.pack(fill=tk.BOTH,expand=True,pady=5)
        self.speakingGood = ttk.Radiobutton(self.speakingLabel,text='Good',value='good',variable=speakVar)
        self.speakingGood.pack(side=tk.LEFT)
        self.speakingBad = ttk.Radiobutton(self.speakingLabel,text='Bad',value='bad',variable=speakVar)
        self.speakingBad.pack(side=tk.LEFT,padx=(10,0))
        # writing
        writeVar = tk.StringVar()
        self.writingLabel = tk.LabelFrame(self.behaviorLabel,text='Writing',bd=0)
        self.writingLabel.pack(fill=tk.BOTH,expand=True,pady=5)
        self.writingGood = ttk.Radiobutton(self.writingLabel,text='Good',value='good',variable=writeVar)
        self.writingGood.pack(side=tk.LEFT)
        self.writingBad = ttk.Radiobutton(self.writingLabel,text='Bad',value='bad',variable=writeVar)
        self.writingBad.pack(side=tk.LEFT,padx=(10,0))
        # reading
        readVar = tk.StringVar()
        self.readingLabel = tk.LabelFrame(self.behaviorLabel,text='Reading',bd=0)
        self.readingLabel.pack(fill=tk.BOTH,expand=True,pady=5)
        self.readingGood = ttk.Radiobutton(self.readingLabel,text='Good',value='good',variable=readVar)
        self.readingGood.pack(side=tk.LEFT)
        self.readingBad = ttk.Radiobutton(self.readingLabel,text='Bad',value='bad',variable=readVar)
        self.readingBad.pack(side=tk.LEFT,padx=(10,0))
        # spelling
        spellVar = tk.StringVar()
        self.spellingLabel = tk.LabelFrame(self.behaviorLabel,text='Spelling',bd=0)
        self.spellingLabel.pack(fill=tk.BOTH,expand=True,pady=5)
        self.spellingGood = ttk.Radiobutton(self.spellingLabel,text='Good',value='good',variable=spellVar)
        self.spellingGood.pack(side=tk.LEFT)
        self.spellingBad = ttk.Radiobutton(self.spellingLabel,text='Bad',value='bad',variable=spellVar)
        self.spellingBad.pack(side=tk.LEFT,padx=(10,0))
        # listening
        listenVar = tk.StringVar()
        self.listeningLabel = tk.LabelFrame(self.behaviorLabel,text='Listening',bd=0)
        self.listeningLabel.pack(fill=tk.BOTH,expand=True,pady=5)
        self.listeningGood = ttk.Radiobutton(self.listeningLabel,text='Good',value='good',variable=listenVar)
        self.listeningGood.pack(side=tk.LEFT)
        self.listeningBad = ttk.Radiobutton(self.listeningLabel,text='Bad',value='bad',variable=listenVar)
        self.listeningBad.pack(side=tk.LEFT,padx=(10,0))

##-BUTTONS-#############################################################################################################
        def clear_all():
            self.studentEntry.delete(0,tk.END)
            self.bookPage.delete(0,tk.END)
            self.newWords.delete(0.0,tk.END)
            self.grammar.delete(0.0,tk.END)
            self.sentences.delete(0.0,tk.END)
            self.homework.delete(0.0,tk.END)
            self.altogether.delete(0.0,tk.END)
            self.book.current(0)

            speakVar.set(None)
            readVar.set(None)
            writeVar.set(None)
            spellVar.set(None)
            listenVar.set(None)

        def combine():
            NAME = self.studentEntry.get()
            BOOK = self.book.get()
            PAGES = self.bookPage.get()
            NEWWORDS = self.newWords.get(0.0,tk.END)
            GRAMMAR = self.grammar.get(0.0,tk.END)
            SENTENCES = self.sentences.get(0.0,tk.END)
            HOMEWORK = self.homework.get(0.0,tk.END)
            self.altogether.delete(0.0,tk.END)
            SPEAK = speakVar.get()
            READ = readVar.get()
            WRITE = writeVar.get()
            LISTEN = listenVar.get()
            SPELL = spellVar.get()

            if self.altogetherLabel['text'] == '一共':
                if len(PAGES) > 0:
                    self.altogether.insert(0.0, f'Hi {NAME},\n本节课我们主要学习了 {BOOK}, p{PAGES}\n')
                else:
                    self.altogether.insert(0.0, f'Hi {NAME},\n本节课我们主要学习了 {BOOK}\n')
            # behavior
                if len(SPEAK) > 1 and SPEAK != 'None' \
                        or len(READ) > 1 and READ != 'None' \
                        or len(WRITE) > 1 and WRITE != 'None' \
                        or len(LISTEN) > 1 and LISTEN != 'None' \
                        or len(SPELL) > 1 and SPELL != 'None' :
                    self.altogether.insert(tk.END, f'\n{"【课堂表现】"}\n')
                    if SPEAK == 'good':
                        self.altogether.insert(tk.END,'说：发音还不错，语言比较流畅.\n')
                    elif SPEAK == 'bad':
                        self.altogether.insert(tk.END,'说：部分单词发音有问句，需要及时复习巩固.\n')
                    if READ == 'good':
                        self.altogether.insert(tk.END,'Reading - 读：基本能够理解文章大意，掌握文章内容。能够完整翻译全文.\n')
                    elif READ == 'bad':
                        self.altogether.insert(tk.END,'读：能够在老师帮助下，理解文章内容。但是对于文章翻译，还需要加强哦.\n')
                    if WRITE == 'good':
                        self.altogether.insert(tk.END,'写：组句能力比较好，书写字迹清晰，非常棒.\n')
                    elif WRITE == 'bad':
                        self.altogether.insert(tk.END,'写：组句能力需要提高哦，还无法自己造句，需要有意识进行提高哦.\n')
                    if LISTEN == 'good':
                        self.altogether.insert(tk.END,'听：听力比较好，能够理解听力全文，并复述.\n')
                    elif LISTEN == 'bad':
                        self.altogether.insert(tk.END,'听：听力部分，难度比较大.\n')
                    if SPELL == 'good':
                        self.altogether.insert(tk.END,'拼写：听写情况还不错哦，基本掌握单词中英文意思.\n')
                    elif SPELL == 'bad':
                        self.altogether.insert(tk.END,'拼写：听写情况比较糟糕，需要课后继续记忆哦，错误的单词抄写3遍.\n')

            # new words
                if len(NEWWORDS) > 1:
                    words = int(self.newWords.index('end').split('.')[0]) - 1
                    wordlist = []
                    for item in range(1,words+1):
                        wordlist.append(self.newWords.get(float(item),f"{float(item)} lineend"))
                    d = ', '.join(wordlist)
                    self.altogether.insert(tk.END, f'\n【主要单词】\n{d}\n')
            # grammar
                if len(GRAMMAR) > 1:
                    self.altogether.insert(tk.END, f'\n{"【主要语法】"}\n')
                    words = int(self.grammar.index('end').split('.')[0]) - 1
                    for item in range(1, words + 1):
                        self.altogether.insert(tk.END, f'{self.grammar.get(float(item), f"{float(item)} lineend")}\n')
            # sentences
                if len(SENTENCES) > 1:
                    self.altogether.insert(tk.END, f'\n{"【主要句型】"}\n')
                    words = int(self.sentences.index('end').split('.')[0])-1
                    for item in range(1,words+1):
                        self.altogether.insert(tk.END, f'{self.sentences.get(float(item), f"{float(item)} lineend")}\n')
            # homework
                if len(HOMEWORK) > 1:
                    self.altogether.insert(tk.END, f'\n{"【课后作业】"}\n')
                    self.altogether.insert(tk.END, HOMEWORK)

            elif self.altogetherLabel['text'] == 'Altogether':
                if len(PAGES) > 0:
                    self.altogether.insert(0.0, f'Hi {NAME},\nToday we studied {BOOK}, p{PAGES}\n')
                else:
                    self.altogether.insert(0.0, f'Hi {NAME},\nToday we studied {BOOK}\n')
            # new words
                if len(NEWWORDS) > 1:
                    words = int(self.newWords.index('end').split('.')[0]) - 1
                    wordlist = []
                    for item in range(1,words+1):
                        wordlist.append(self.newWords.get(float(item),f"{float(item)} lineend"))
                    d = ', '.join(wordlist)
                    self.altogether.insert(tk.END, f'\n【New Words】\n{d}\n')
            # behavior
                if len(SPEAK) > 1 and SPEAK != 'None' \
                        or len(READ) > 1 and READ != 'None' \
                        or len(WRITE) > 1 and WRITE != 'None' \
                        or len(LISTEN) > 1 and LISTEN != 'None' \
                        or len(SPELL) > 1 and SPELL != 'None' :
                    self.altogether.insert(tk.END, f'\n{"【Behavior】"}\n')
                    if SPEAK == 'good':
                        self.altogether.insert(tk.END,'Speaking - Their speaking is good.\n')
                    elif SPEAK == 'bad':
                        self.altogether.insert(tk.END,'Speaking - Their speaking needs improvement.\n')
                    if READ == 'good':
                        self.altogether.insert(tk.END,'Reading - They can almost completely understand the readings.\n')
                    elif READ == 'bad':
                        self.altogether.insert(tk.END,'Reading - It is difficult for them to understand the meaning of the readings.\n')
                    if WRITE == 'good':
                        self.altogether.insert(tk.END,'Writing - Their writing is good.\n')
                    elif WRITE == 'bad':
                        self.altogether.insert(tk.END,'Writing - It is difficult for them to make full sentences.\n')
                    if LISTEN == 'good':
                        self.altogether.insert(tk.END,'Listening - They can understand what they hear without much repetition.\n')
                    elif LISTEN == 'bad':
                        self.altogether.insert(tk.END,'Listening - Listening is very difficult for them.  I have to repeat the same thing many times.\n')
                    if SPELL == 'good':
                        self.altogether.insert(tk.END,'Spelling - Their spelling is good with very few errors.\n')
                    elif SPELL == 'bad':
                        self.altogether.insert(tk.END,'Spelling - Their spelling is bad.  They should write the misspelled words 3 times each.\n')
            # grammar
                if len(GRAMMAR) > 1:
                    self.altogether.insert(tk.END, f'\n{"【Grammar】"}\n')
                    words = int(self.grammar.index('end').split('.')[0]) - 1
                    for item in range(1, words + 1):
                        self.altogether.insert(tk.END, f'{self.grammar.get(float(item), f"{float(item)} lineend")}\n')
            # sentences
                if len(SENTENCES) > 1:
                    self.altogether.insert(tk.END, f'\n{"【Sentences】"}\n')
                    words = int(self.sentences.index('end').split('.')[0])-1
                    for item in range(1,words+1):
                        self.altogether.insert(tk.END, f'{self.sentences.get(float(item), f"{float(item)} lineend")}\n')
            # homework
                if len(HOMEWORK) > 1:
                    self.altogether.insert(tk.END, f'\n{"【Homework】"}\n')
                    self.altogether.insert(tk.END, HOMEWORK)

        self.buttonLabel = tk.Frame(self.leftColumn)
        self.buttonLabel.pack(side=tk.LEFT,fill=tk.BOTH,expand=True)

        self.clearAllButton = tk.Button(self.buttonLabel,text='Clear All',font=font_labels,command=clear_all)
        self.clearAllButton.pack(fill=tk.BOTH,expand=True)

        self.FinishButton = tk.Button(self.buttonLabel,text='Finish',font=font_labels,command=combine)
        self.FinishButton.pack(fill=tk.BOTH,expand=True)
    # center column left
        self.newWordsLabel = tk.LabelFrame(self.centerColumnLeft,text='New Words',font=font_labels)
        self.newWordsLabel.pack(fill=tk.BOTH,expand=True)
        self.newWords = ScrolledText(self.newWordsLabel,width=40,height=15,undo=True,autoseparators=True,maxundo=20,wrap=tk.WORD)
        self.newWords.pack(fill=tk.BOTH,expand=True)

        self.grammarLabel = tk.LabelFrame(self.centerColumnLeft,text='Grammar',font=font_labels)
        self.grammarLabel.pack(fill=tk.BOTH,expand=True)
        self.grammar = ScrolledText(self.grammarLabel,width=40,height=15,undo=True,autoseparators=True,maxundo=20,wrap=tk.WORD)
        self.grammar.pack(fill=tk.BOTH,expand=True)
    # center column right
        self.sentencesLabel = tk.LabelFrame(self.centerColumnRight,text='Sentences',font=font_labels)
        self.sentencesLabel.pack(fill=tk.BOTH,expand=True)
        self.sentences = ScrolledText(self.sentencesLabel,width=40,height=15,undo=True,autoseparators=True,maxundo=20,wrap=tk.WORD)
        self.sentences.pack(fill=tk.BOTH,expand=True)

        self.homeworkLabel = tk.LabelFrame(self.centerColumnRight,text='Homework',font=font_labels)
        self.homeworkLabel.pack(fill=tk.BOTH,expand=True)
        self.homework = ScrolledText(self.homeworkLabel,width=40,height=15,undo=True,autoseparators=True,maxundo=20,wrap=tk.WORD)
        self.homework.pack(fill=tk.BOTH,expand=True)
    # right column
        self.altogetherLabel = tk.LabelFrame(self.rightColumn,text='Altogether',font=font_labels)
        self.altogetherLabel.pack(fill=tk.BOTH,expand=True)
        self.altogether = ScrolledText(self.altogetherLabel,width=40,height=30,undo=True,autoseparators=True,maxundo=20,wrap=tk.WORD)
        self.altogether.pack(fill=tk.BOTH,expand=True)
##-OTHER MENU-##########################################################################################################
        def help():
            self.altogether.replace(0.0, tk.END, f"Hello and welcome to Fast Comment Maker {VERSION}!\n\n"
f"This program was created with the goal of making closing classes much easier "
f"and less time consuming.  It is very easy to use.\n\n"
f"Just put the information in the correct boxes and hit 'Finish' "
f"to have it make a complete, organized comment you can send to the student.\n\n"
f"The menu bar has all of the grammar and vocabulary found in the books used "
f"most often.  Just choose the book and what you did during class.\n\n"
f"Happy commenting!\n\nWarning: change the language before you input data.\n\n"
f"你好，欢迎使用快速评论生成器 {VERSION}！”\n\n"
f"该计划旨在使结业课程更容易"
f"和更少的时间消耗。它很容易使用。\n\n"
f"只需将信息放入正确的框中，然后点击‘完成’"
f"要让它做出完整、有组织的评论，你可以发送给学生。\n\n"
f"菜单栏包含所用书籍中的所有语法和词汇"
f"最常见。只需选择书和你在课堂上所做的事情。\n\n"
f"反馈快乐！\n\n警告：输入数据前更改语言。")
        def basics():
            self.sentences.insert(0.0, """I don't understand (我听不懂)
Please say that again (请再说一下)
Can you speak more slowly? (请更慢地说一下)
What does...mean? (...什么意思？)
How do you spell...? (...怎么拼写？)""")
        def switch_lang():
            if self.studentNameLabel['text'] == 'Student Name':
                self.studentNameLabel['text'] = '名字'
            elif self.studentNameLabel['text'] == '名字':
                self.studentNameLabel['text'] = 'Student Name'
            if self.bookNameLabel['text'] == 'Book Name':
                self.bookNameLabel['text'] = '哪本书'
            elif self.bookNameLabel['text'] == '哪本书':
                self.bookNameLabel['text'] = 'Book Name'
            if self.bookPageLabel['text'] == 'Pages':
                self.bookPageLabel['text'] = '哪张页'
            elif self.bookPageLabel['text'] == '哪张页':
                self.bookPageLabel['text'] = 'Pages'
            if self.behaviorLabel['text'] == 'Behavior':
                self.behaviorLabel['text'] = '课堂表现'
            elif self.behaviorLabel['text'] == '课堂表现':
                self.behaviorLabel['text'] = 'Behavior'
            if self.newWordsLabel['text'] == 'New Words':
                self.newWordsLabel['text'] = '主要单词'
            elif self.newWordsLabel['text'] == '主要单词':
                self.newWordsLabel['text'] = 'New Words'
            if self.grammarLabel['text'] == 'Grammar':
                self.grammarLabel['text'] = '语法'
            elif self.grammarLabel['text'] == '语法':
                self.grammarLabel['text'] = 'Grammar'
            if self.sentencesLabel['text'] == 'Sentences':
                self.sentencesLabel['text'] = '句子'
            elif self.sentencesLabel['text'] == '句子':
                self.sentencesLabel['text'] = 'Sentences'
            if self.homeworkLabel['text'] == 'Homework':
                self.homeworkLabel['text'] = '作业'
            elif self.homeworkLabel['text'] == '作业':
                self.homeworkLabel['text'] = 'Homework'
            if self.altogetherLabel['text'] == 'Altogether':
                self.altogetherLabel['text'] = '一共'
            elif self.altogetherLabel['text'] == '一共':
                self.altogetherLabel['text'] = 'Altogether'
            if self.clearAllButton['text'] == 'Clear All':
                self.clearAllButton['text'] = '清零'
            elif self.clearAllButton['text'] == '清零':
                self.clearAllButton['text'] = 'Clear All'
            if self.FinishButton['text'] == 'Finish':
                self.FinishButton['text'] = '结束'
            elif self.FinishButton['text'] == '结束':
                self.FinishButton['text'] = 'Finish'
            if self.speakingLabel['text'] == 'Speaking':
                self.speakingLabel['text'] = '说'
            elif self.speakingLabel['text'] == '说':
                self.speakingLabel['text'] = 'Speaking'
            if self.writingLabel['text'] == 'Writing':
                self.writingLabel['text'] = '写'
            elif self.writingLabel['text'] == '写':
                self.writingLabel['text'] = 'Writing'
            if self.readingLabel['text'] == 'Reading':
                self.readingLabel['text'] = '阅读'
            elif self.readingLabel['text'] == '阅读':
                self.readingLabel['text'] = 'Reading'
            if self.spellingLabel['text'] == 'Spelling':
                self.spellingLabel['text'] = '拼写'
            elif self.spellingLabel['text'] == '拼写':
                self.spellingLabel['text'] = 'Spelling'
            if self.listeningLabel['text'] == 'Listening':
                self.listeningLabel['text'] = '听力'
            elif self.listeningLabel['text'] == '听力':
                self.listeningLabel['text'] = 'Listening'
        def ipa():
            ipa_win = tk.Tk()
            ipa_win.title('Phonics Symbols')
            title_label = tk.Label(ipa_win, text='Phonics Symbols Reference Chart', font=['Times', 15, 'underline'])
            title_label.grid(row=0, column=0, columnspan=8, sticky=tk.EW)
            for sound, example, row, col, color in IPA:
                sound = tk.Button(ipa_win, text=f'{sound} – {example}   ', font=['Times', 15, 'normal'], bg=color,
                                  command=lambda x=sound: put_symbols_here.insert(tk.INSERT, x)).grid(row=row,
                                                                                                      column=col,
                                                                                                      sticky=tk.EW)
            separator = tk.Label(ipa_win, height=1)
            separator.grid(row=4, column=0, columnspan=6)
            put_symbols_here = tk.Entry(ipa_win, font=['Times', 15, 'normal'])
            put_symbols_here.grid(row=8, column=0, columnspan=8, sticky=tk.EW)
            ipa_win.mainloop()
        def pos():
            pos_win = tk.Tk()
            pos_win.title('Language Terms')
            title_label = tk.Label(pos_win, text='Language Terms', font=['Times', 15, 'underline'])
            title_label.grid(row=0, column=0, columnspan=2, sticky=tk.EW)
            POS.sort(key=lambda x: x[0])  # alphabetize word list
            n = 1
            for i in POS:
                sound = tk.Label(pos_win, text=f'{i[0]} {i[1]}', font=['Times', 15, 'normal'])
                if POS.index(i) < len(POS) // 2:
                    sound.grid(row=n, column=0, sticky=tk.W)
                    n += 1
                if POS.index(i) == len(POS) // 2:
                    n = 1
                    sound.grid(row=n, column=1, sticky=tk.W)
                    n += 1
                elif POS.index(i) >= len(POS) // 2:
                    sound.grid(row=n, column=1, sticky=tk.W)
                    n += 1
            pos_win.mainloop()
        def text_to_qr():
            to_convert = self.altogether.get(0.0, tk.END)
            to_scan = pyqrcode.create(to_convert, encoding='utf-8')
            to_scan.png('My QRcode.png', scale=6)
            from PIL import Image
            img = Image.open('My QRcode.png')
            img.show()

        other_menu.add_command(label='Help', command=help)
        other_menu.add_command(label='Phonics', command=ipa)
        other_menu.add_command(label='Language Vocab', command=pos)
        other_menu.add_command(label='Useful Phrases', command=basics)
        other_menu.add_command(label='Switch Languages', command=switch_lang)
        other_menu.add_command(label='Text to QRcode', command=text_to_qr)
